class Cat:
    #属性

    #方法
    def eat(self):
        print('the cat is eating fish.')

    def drink(self):
        print('the cat is drinking cola.')
    
    def introduce(self):

        print('%s的年龄是：%d'%(tom.name,tom.age))

#创建一个对象
tom = Cat()

#调用tom指向的对象中的 方法
tom.eat()

tom.drink()
#添加属性

tom.name = 'Tom'

tom.age = 40
print('*'*50)
print('%s的年龄是：%d'%(tom.name,tom.age))
print('-'*50)
tom.introduce()
